{
    "name": "checkmate-vscode",
    "displayName": "checkmate-vscode",
    "description": "vscode extension for checkmate",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.29.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.newTextFile",
        "onCommand:extension.loginToSF"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.newTextFile",
                "title": "Checkmate: New Text File"
            },
            {
                "command": "extension.loginToSF",
                "title": "Login to Salesforce"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "extension.loginToSF"
                },
                {
                    "command": "extension.loginToSF",
                    "when": "resourceFilename =~ /batch/ && resourceExtname == .cls"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "yarn run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "tslint": "^5.8.0",
        "typescript": "^3.1.4",
        "vscode": "^1.1.25"
    },
    "dependencies": {
        "@types/request": "^2.48.1",
        "@types/request-promise": "^4.1.42",
        "request": "^2.88.0",
        "request-promise": "^4.2.2"
    }
}
